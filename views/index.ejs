  <body>
    <nav id="main-nav">
      <div class="nav-container">
        <div class="left-container">
          <h1 class="logo">JDo It!</h1>

          <div class="form-container">
            <form>
              <input
                class="search-input"
                type="text"
                name="search"
                id="search"
              />
              <button class="search-btn" type="button">
                <i class="fas fa-search"></i>
              </button>
            </form>
          </div>
        </div>

        <div class="right-container">
          <ul>
            <li>
              <i class="fas fa-user-circle fa-2x"></i>
              <ul>
                <li class="nav-item">
                  <% if(session.userId){ %>
                  <a class="" href="/LogOut">Sign out</a>
                  <% } else { %>
                  <a class="" href="/Login">Sign in</a>
                  <% } %>
                </li>

                <% if(!session.userId){ %>
                <li>
                  <p>
                    Don't have an account?
                    <a class="Login" href="/SignUp">Sign Up Now!</a>
                  </p>
                </li>
                <% } %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section id="job">
      <div class="grid-left">
        <% for (var i= start; i < end; i++) { %>
        <div class="job_post_item" job-id="<%= all_posts[i].Company_id %>">
          <div class="job-inner">
            <i class="far fa-building fa-2x"></i>
            <div class="job-header">
              <a class="job-title" href="#"><%= all_posts[i].Job_Title %></a>
              <div><%= all_posts[i].Location %></div>
            </div>
          </div>
        </div>
        <% } %>

        <div id="page-bar">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link first" href="/">First</a>
            </li>
            <% for (var i= pagin_start ; i < pagin_end; i++) { %> <% if (i ==
            currPage) { %>
            <li class="page-item">
              <a class="page-link current" href="/jobpost/<%= i %>"><%= i %></a>
            </li>
            <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/jobpost/<%= i %>"><%= i %></a>
            </li>
            <% } %> <% } %>
            <li class="page-item">
              <a class="page-link end" href="/jobpost/<%= last_page %>">End</a>
            </li>
          </ul>
        </div>
      </div>

      <div class="grid-right">
        <div class="job-rightgrid-container">
          <div class="right-page-inner">
            <i id="bottom" class="far fa-building fa-7x"></i>

            <div class="title-and-location">
              <div class="job-page-title-container">
                <a id="job-page-title" href="#"
                  ><%= all_posts[start].Job_Title %></a
                >
              </div>
              <div id="job-page-Location"><%= all_posts[start].Location %></div>

              <div class="apply-book-container">
                <a
                  id="apply_link"
                  class="btn btn-primary"
                  href="<%= all_posts[start].Job_Link %>"
                  target="_blank"
                  >Apply</a
                >
                <a
                  id="book_mark"
                  class="btn btn-primary"
                  href="/bookmark/<%= all_posts[start].Company_id%>"
                  >Save</a
                >
              </div>
            </div>
          </div>
        </div>

        <div class="context-container">
          <p id="job_detail_paragraph">
            <%= all_posts[start].Context %>
          </p>
        </div>
      </div>
    </section>

